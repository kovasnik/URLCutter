@using URLCutter.DTO
@model RegisterDTO

<head>
    <link rel="stylesheet" href="~/css/account.css" />
</head>

<form asp-action="SignUp" class="form-signin text-center mt-3">
    <h3>Sign up</h3>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }
    <input asp-for="UserName" type="text" class="form-control" placeholder="User name" required autofocus>
    <input asp-for="Email" type="email" class="form-control" placeholder="Email address" required>
    <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</form>